<Window x:Class="TaskExceptionApp.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TaskExceptionApp"
        mc:Ignorable="d" SizeToContent="Width"
        Title="MessageBox" Height="250" WindowStartupLocation="CenterOwner">
  <Grid Margin="7">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock x:Name="Message"/>
    <Button Grid.Row="2" x:Name="CloseButton" Width="74" HorizontalAlignment="Right" IsDefault="True" IsCancel="True">Close</Button>
  </Grid>
</Window>
